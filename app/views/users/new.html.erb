<h1>User#new</h1>
<p>Find me in app/views/user/new.html.erb</p>


<div id="main-container" class="container">
  <div class="row">
    <div id="sidebar" class="col-xs-3">
      <!-- sidebar content -->
    </div>
      <div id="content" class="col-xs-9">
        
        <%= form_for @user do |f| %> 
          <p>
            <%= f.email_field :email, placeholder: 'Email', required: true %></br>
            <%= f.text_field :first_name, placeholder: 'First Name', required: true %></br>
            <%= f.text_field :last_name, placeholder: 'Last Name', required: true %><br>
            <%= f.password_field :password, placeholder: 'Password', required: true %><br>
            <%= f.file_field :avatar, class: "form-control title_input_field2" %>
            <div>
            Tick box if you are a performer<%= f.check_box(:performer) %></br>
            </div>
            <%= f.submit "Signup!" %>
          </p>
 
          <% end %>
        </div>
    </div>
</div> 
