<%= stylesheet_link_tag "users" %>
<div id="main-container" class="container">
  <div class="row">
    <div id="sidebar" class="col-xs-3">
      <!-- sidebar content -->
    </div>
    <div id="content" class="col-xs-9">
      <div class="form-container">
        <form class="form-signin">
          <h2 class="form-signin-heading">Create an account</h2>
            <%= form_tag sessions_create_path, method: :post do %>

        	<%= text_field_tag :email, nil, required: true, placeholder: "email", class: "users-new-input" %></br>
        	<%= password_field_tag :password, nil, required: true, placeholder: "password", class: "users-new-input" %></br>
        	<%= submit_tag "Login", class: "ghost-button" %>

      <% end %>
      </div>
     </div>
    </div>
  </div>
</div> 