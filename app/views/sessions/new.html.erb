<%= stylesheet_link_tag "users" %>
<div id="main-container" class="container">
  <div class="row">

    <div id="content" class="col-xs-12">
      <div class="form-container">
     
          <h2 class="form-signin-heading">Login</h2>
            <%= form_tag sessions_create_path, method: :post do %>
          <div class="form-group">
            <%= text_field_tag :email, nil, required: true, placeholder: "email", class: "users-new-input" %>
          </div>
          <div class="form-group">
            <%= password_field_tag :password, nil, required: true, placeholder: "password", class: "users-new-input" %>
          </div>
        	<%= submit_tag "Login", class: "ghost-button" %>

      <% end %>
      </div>
     </div>
    </div>
  </div>
</div> 