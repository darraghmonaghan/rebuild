<div class="profile container">
  <div class="row">
    <div class="col-md-10 col-xs-10">
      <div class="well panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class='row panel panel-default'>
              <div class='col-sm-10 col-md-3'>
                  <div class='row'>
                      <div class="col-md-3"></div>
                      <div class='col-md-6'><%= image_tag(@performer.perfavatar, class: "perf_profile", id: "cat_show_avatar") %></div>
                      <div class="col-md-3"></div>
                  </div>
              </div>

              <div class='col-sm-10 col-md-7'>
                <h2><%= @performer.performer_name %></h2>
                <h3><%= @performer.city %></h3>
                <strong>Category:</strong> <%= @category.category %> - <%= @performer.subcategory %><br>
                <strong>Hourly Rate:</strong> <%= @performer.hourly_rate %><br>
                <strong>Description:</strong> <%= @performer.description %><br>

                <% if current_user %>
                      <br><strong>Email this user and get the conversation started!    </strong><a href="mailto:<%= @performer.performer_email %>"><%= @performer.performer_email %></a><br>  
                <% else %>
                      <br><p><strong><%= link_to "Sign In to See This Performer Email!", sessions_new_path %></strong></p><br>
                <% end %>
                <br>
              </div> 

                <!-- logged in logic - needs help -->
                <div class="col-sm-10 col-md-2">
                  <% if current_user %>
                    <% if @performer.user_id == current_user.id %>
                      <%= button_to "Edit Profile", edit_performer_path, method: :get, class: "btn btn-info" %>
                      <%= button_to "Delete", performer_path, method: :delete, class: "btn btn-danger" %>
                    <% end %>
                  <% end %>
                </div>
                <!-- end logged in logic -->
              </div>
          </div>

           <!-- end user bio div --> 
  <div class='row'>
    <div id="performer-img" class="carousel slide col-md-5" data-ride="carousel">
     <!-- Indicators -->
     <ol class="carousel-indicators">
       <li data-target="#performer-img" data-slide-to="0" class="active"></li>
       <li data-target="#performer-img" data-slide-to="1"></li>
       <li data-target="#performer-img" data-slide-to="2"></li>
     </ol>

     <!-- Wrapper for slides -->
     <div class="carousel-inner" role="listbox">
       <div class="item active">
         <img src="<%= @performer.image1 %>">
       </div>

       <div class="item">
         <img src="<%= @performer.image2 %>">
       </div>

       <div class="item">
         <img src="<%= @performer.image3 %>">
       </div>

     </div>

     <!-- Left and right controls -->
     <a class="left carousel-control" href="#performer-img" role="button" data-slide="prev">
       <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
       <span class="sr-only">Previous</span>
     </a>
     <a class="right carousel-control" href="#performer-img" role="button" data-slide="next">
       <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
       <span class="sr-only">Next</span>
     </a>
    </div>

     <br><br>

    <div id="performer-vid" class="carousel slide col-md-5" data-ride="carousel" data-interval="false">

     <!-- Indicators -->
     <ol class="carousel-indicators">
       <li data-target="#performer-vid" data-slide-to="0" class="active"></li>
       <li data-target="#performer-vid" data-slide-to="1"></li>
       <li data-target="#performer-vid" data-slide-to="2"></li>
     </ol>

     <!-- Wrapper for slides -->
     <div class="carousel-inner" role="listbox">
       <div class="item embed-container active">
          <%= embed(@performer.video1) %>
       </div>

       <div class="item embed-container">
          <%= embed(@performer.video2) %>
       </div>

       <div class="item embed-container">
         <%= embed(@performer.video3) %>
       </div>
     </div>

     <!-- Left and right controls -->
       <a class="left carousel-control" href="#performer-vid" role="button" data-slide="prev">
         <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
         <span class="sr-only">Previous</span>
       </a>
       <a class="right carousel-control" href="#performer-vid" role="button" data-slide="next">
         <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
         <span class="sr-only">Next</span>
       </a>
      </div>
  </div>

        </div>
      </div> 
    </div> 
  </div>
</div>    


  
 
	
