<div class="container">
  <!-- logged in logic - needs help -->
  <div>
    <% if correct_user(@performer) %>
      <%= button_to "Edit Profile", edit_performer_path, method: :get %>
      <%= button_to "Delete", performer_path, method: :delete %>
    <% end %>
  </div>
  <!-- end logged in logic -->

  <!-- user bio div -->
  <div>
    <div>
        <%= image_tag(@performer.perfavatar) %>
    </div>

    <div>
      <% if current_user %>
        <div><strong>Email this user and get the conversation started!</strong></div>
        <div><a href="mailto:<%= @performer.performer_email %>"><%= @performer.performer_email %></a></div> 
      <% else %>
        <p><strong><%= "Sign Up to See This Performer Email!" %></strong></p>
      <% end %>
    </div>
    <div>
      <h1><%= @performer.performer_name %></h1>
      <h3><%= @performer.city %></h3>
      <strong>Category:</strong>  - <%= @performer.subcategory %>
      <br>
      <strong>Hourly Rate:</strong> <%= @performer.hourly_rate %>
    </div>

    <div>
      <strong>Description:</strong> <%= @performer.description %>
    </div>
  </div>
  <!-- end user bio div -->
  


<div id="performer-img" class="carousel slide" data-ride="carousel">
 <!-- Indicators -->
 <ol class="carousel-indicators">
   <li data-target="#performer-img" data-slide-to="0" class="active"></li>
   <li data-target="#performer-img" data-slide-to="1"></li>
   <li data-target="#performer-img" data-slide-to="2"></li>
   <li data-target="#performer-img" data-slide-to="3"></li>
 </ol>

 <!-- Wrapper for slides -->
 <div class="carousel-inner" role="listbox">
   <div class="item active">
     <img src="<%= @performer.image1 %>">
   </div>

   <div class="item">
     <img src="<%= @performer.image2 %>">
   </div>

   <div class="item">
     <img src="<%= @performer.image3 %>">
   </div>

 </div>

 <!-- Left and right controls -->
 <a class="left carousel-control" href="#performer-img" role="button" data-slide="prev">
   <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
   <span class="sr-only">Previous</span>
 </a>
 <a class="right carousel-control" href="#performer-img" role="button" data-slide="next">
   <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
   <span class="sr-only">Next</span>
 </a>
</div>

 <br><br>

<div id="performer-vid" class="carousel slide" data-ride="carousel" data-interval="false">

 <!-- Indicators -->
 <ol class="carousel-indicators">
   <li data-target="#performer-vid" data-slide-to="0" class="active"></li>
   <li data-target="#performer-vid" data-slide-to="1"></li>
   <li data-target="#performer-vid" data-slide-to="2"></li>
   <li data-target="#performer-vid" data-slide-to="3"></li>
 </ol>

 <!-- Wrapper for slides -->
 <div class="carousel-inner" role="listbox">
   <div class="item embed-container active">
      <%= embed(@performer.video1) %>
   </div>

   <div class="item embed-container">
      <%= embed(@performer.video2) %>
   </div>

   <div class="item embed-container">
     <%= embed(@performer.video3) %>
   </div>
 </div>

 <!-- Left and right controls -->
 <a class="left carousel-control" href="#performer-vid" role="button" data-slide="prev">
   <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
   <span class="sr-only">Previous</span>
 </a>
 <a class="right carousel-control" href="#performer-vid" role="button" data-slide="next">
   <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
   <span class="sr-only">Next</span>
 </a>
</div>

	
	</div>